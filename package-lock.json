// sendSMS.js
import fetch from "node-fetch"; // npm install node-fetch

const API_TOKEN = "YOUR_SMSALA_API_TOKEN";
const ENDPOINT = "MCK"; // your endpoint

async function sendSMS(to, message) {
  const url = `https://smsala.com/api/sendSMS?endpoint=${ENDPOINT}&api_token=${API_TOKEN}&phonenumber=${encodeURIComponent(to)}&textmessage=${encodeURIComponent(message)}`;

  try {
    const response = await fetch(url);
    const text = await response.text();
    console.log("SMSala response:", text);
  } catch (error) {
    console.error("Error sending SMS:", error);
  }
}

// Example usage
sendSMS("254712345678", "Hello from Node.js!");
